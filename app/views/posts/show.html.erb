<div id="post_show_content" class="skinny_wrapper wrapper_padding">
			<header>
				<p class="date"><%= @post.created_at.strftime("%A, %b, %d") %></p>
				<h1><%= @post.title %></h1>
				<hr>
			</header>
			<div id="content">
				<div class="post_image">
					<% if @post.post_image? %>
						<%= image_tag @post.post_image.url %>
					<% end %>
				</div>
				<br>
				<%= markdown @post.content %>
			</div>


			<!-- Begin MailChimp Signup Form -->
<link href="//cdn-images.mailchimp.com/embedcode/classic-081711.css" rel="stylesheet" type="text/css">
<form action="//tylerporter.us12.list-manage.com/subscribe/post?u=0f45dea85ec0074fe7ed4177a&amp;id=f1f4c01661" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
	
<div class="email-fields">
	<h6>Sign up! Let's learn Ruby on Rails together!</h6>
	<input type="email" value="" placeholder="Email Address" name="EMAIL" class="required email" id="mce-EMAIL">
	<input type="submit" value="Subscribe" name="subscribe" class="button-mail"><br>
	<small>I will never misuse or abuse your email. I hate it when people do that to me, so why would I do that to you!?!</small>
</div>
	<div class="clear">
		<div class="response" id="mce-error-response" style="display:none"></div>
		<div class="response" id="mce-success-response" style="display:none"></div>
	</div>    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
    <div style="position: absolute; left: -5000px;"><input type="text" name="b_0f45dea85ec0074fe7ed4177a_f1f4c01661" tabindex="-1" value=""></div>
</form>

<!--End mc_embed_signup-->

			<% if user_signed_in? %>
				<div id="admin_links">
					<%= link_to "Edit Article", edit_post_path(@post) %>
					<%= link_to "Delete Article", post_path(@post), method: :delete, data: { confirm: "Are you sure?" } %> 
				</div>	
			<% end %>
			<hr>

			<div id="share_box">
				<p>Share "<%= @post.title %>"</p>
				<a onclick="javascript:window.open('http://twitter.com/share?text=<%= @post.title %> by @imtylerporter - &amp;url=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-twitter"></i></a>
				<a onclick="javascript:window.open('http://www.facebook.com/sharer.php?u=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left =300');void(0);"><i class="fa fa-facebook"></i></a>
				<a onclick="javascript:window.open('https://www.plus.google.com/share?url=<%= url_for([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left =300');void(0);"><i class="fa fa-google-plus"></i></a>	
			</div>

			<hr>
			<%= render 'disqus' %>
		</div>