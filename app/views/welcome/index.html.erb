	</div>
	<div class="col-2 homepage_content">
		<h2>Stuff I have written</h2>
		<hr>

		<% @posts.each do |post|%>
			<h3><a href="#"><%= link_to post.title, post %></a></h3>
			<p class="date"><%= post.created_at.strftime("%A, %b, %d") %> | <%= post.user.fullname %></p>

		<% end %>
	</div>
	<div class="col-3 homepage_content">
		<h2>Stuff I have built</h2>
		<hr>
		<% @projects.each do |project|%>
			<h3><a href="#"><%= link_to project.title, project %></a></h3>
			<p class="date"><%= project.created_at.strftime("%A, %b, %d") %> | <%= project.user.fullname %></p>	
		<% end %>
	</div>	
</div><!--.wrapper-->