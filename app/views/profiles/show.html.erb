<div id="posts_wrapper" class="skinny_wrapper">
	<div class="profile-header clearfix">
	
		<% if user_signed_in? %>
	            <%= link_to 'Edit Profile', edit_profile_path(@user.user_name),
	                                      class: 'button'%>
	        <% end %>
		<div class="col-1-profile">
			<%= profile_avatar_select(@user) %> 
		</div>	
		<div class="col-2-profile">
	        <%= markdown @user.bio %>
	                             
	    </div>    
	</div>
	<div class="profile-body">
		<% @posts.each do |post| %>
			<div class="post">
				<p class="date"><%= post.created_at.strftime("%A, %b, %d") %></p>
				<h2><a href="#"><%= link_to post.title, post %></a></h2>
				<hr>
			</div>
		<% end %>
	</div>
</div>